# Build the docker image with `npx nx docker-build web`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t web`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system web && \
          adduser --system -G web web

# Update COPY commands to include all server-side files
# COPY dist/apps/web/server .
# COPY dist/apps/web/browser ./browser

COPY server ./server
COPY browser ./browser

RUN chown -R web:web .

USER web

CMD [ "node", "server/server.mjs" ]
